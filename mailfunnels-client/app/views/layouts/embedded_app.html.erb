<!DOCTYPE html>
<html lang="en">

<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8;">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<title>MailFunnels</title>

	<% application_name = ShopifyApp.configuration.application_name %>

	<!--SHOPIFY EMBEDDED API -->
	<script src="//cdn.shopify.com/s/assets/external/app.js"></script>

	<script type="text/javascript">
      ShopifyApp.init({
          apiKey: "<%= ShopifyApp.configuration.api_key %>",
          shopOrigin: "<%= "https://#{ @shop_session.url }" if @shop_session %>",
          debug: true,
          forceRedirect: true
      });
	</script>

	<link href='//fonts.googleapis.com/css?family=Raleway:500,900,200' rel='stylesheet' type='text/css'>
	<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">



	<%= stylesheet_link_tag 'application', :media => 'all', 'data-turbolinks-track' => 'reload'%>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload'%>

	<link href="//assets.calendly.com/assets/external/widget.css" rel="stylesheet">
	<script src="//assets.calendly.com/assets/external/widget.js" type="text/javascript"></script>


	<%= csrf_meta_tags %>



</head>


<body class="nav-sm">
<div class="container body">
	<div class="main_container">

		<% if content_for?(:error) %>
				<%= yield :error %>

		<% elsif content_for?(:admin) %>


				<!-- START SIDE NAV BAR -->
				<!-- ~~~~~~~~~~~~~~~~~~ -->
				<div class="col-md-3 left_col">
					<div class="left_col scroll-view">
						<div class="navbar nav_title" style="border: 0;">
							<a href="<%= root_url %>" class="site_title"><i class="fa fa-envelope-o"></i> <span>MailFunnels</span></a>
						</div>

						<div class="clearfix"></div>

						<br>

						<!-- sidebar menu -->
						<div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
							<div class="menu_section active">
								<h3>General</h3>
								<ul class="nav side-menu" style="">
									<li><a href="<%= root_url %>admin_panel"><i class="fa fa-tachometer"></i> Admin Dashboard <span class="fa fa-chevron-down"></span></a>
									</li>
									<li><a href="<%= root_url %>admin_all_users"><i class="fa fa-users"></i> All Users <span class="fa fa-chevron-down"></span></a>
									</li>
									<hr class="fade-2"/>
									<li><a href="<%= root_url %>"><i class="fa fa-envelope-o"></i> Back to MailFunnels <span class="fa fa-chevron-down"></span></a>
									</li>
								</ul>
							</div>
						</div>
						<!-- /sidebar menu -->

					</div>
				</div>
				<!-- ~~~~~~~~~~~~~~~~ -->
				<!-- END SIDE NAV BAR -->


				<!-- START MAIN CONTENT -->
				<!-- ~~~~~~~~~~~~~~~~~~ -->
				<div class="right_col" role="main">
					<div class="row">

						<%= yield :admin %>

					</div>
				</div>
				<!-- ~~~~~~~~~~~~~~~~ -->
				<!-- END MAIN CONTENT -->


				<div class="clearfix"></div>

		<% elsif content_for?(:template_builder) %>

				<%= yield :template_builder %>

		<% else %>





				<!-- START SIDE NAV BAR -->
				<!-- ~~~~~~~~~~~~~~~~~~ -->
				<div class="col-md-3 left_col">
					<div class="left_col scroll-view">
						<div class="navbar nav_title" style="border: 0;">
							<a href="<%= root_url %>" class="site_title"><i class="fa fa-envelope-o"></i> <span>MailFunnels</span></a>
						</div>

						<div class="clearfix"></div>

						<br>

						<!-- sidebar menu -->
						<div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
							<div class="menu_section active">
								<h3>General</h3>
								<ul class="nav side-menu" style="">
									<li><a href="<%= root_url %>"><i class="fa fa-home"></i> Dashboard <span class="fa fa-chevron-down"></span></a>
									</li>
									<li><a href="<%= root_url %>funnels"><i class="fa fa-edit"></i> Funnel Builder <span class="fa fa-chevron-down"></span></a>
									</li>
									<li><a href="<%= root_url %>triggers"><i class="fa fa-tags"></i> Triggers <span class="fa fa-chevron-down"></span></a>
									</li>
									<li><a href="<%= root_url %>email_templates"><i class="fa fa-envelope"></i> Email Builder<span class="fa fa-chevron-down"></span></a>
									</li>
									<li><a href="<%= root_url %>lists"><i class="fa fa-list-ul"></i> Email Lists <span class="fa fa-chevron-down"></span></a>
									</li>
									<li><a href="<%= root_url %>broadcasts"><i class="fa fa-send-o"></i> Broadcasts <span class="fa fa-chevron-down"></span></a>
									</li>
									<li><a href="<%= root_url %>account"><i class="fa fa-user"></i> My Account <span class="fa fa-chevron-down"></span></a>
									</li>
									<li><a href="<%= root_url %>support"><i class="fa fa-question-circle"></i> Support <span class="fa fa-chevron-down"></span></a>
									</li>


								</ul>
							</div>
						</div>
						<!-- /sidebar menu -->

					</div>
				</div>
				<!-- ~~~~~~~~~~~~~~~~ -->
				<!-- END SIDE NAV BAR -->


				<!-- START MAIN CONTENT -->
				<!-- ~~~~~~~~~~~~~~~~~~ -->
				<div class="right_col" role="main">
					<div class="row">


						<% if content_for?(:javascript) %>
								<%= yield :javascript %>
						<% else %>
								<%= yield %>
						<% end %>

					</div>
				</div>
				<!-- ~~~~~~~~~~~~~~~~ -->
				<!-- END MAIN CONTENT -->


				<div class="clearfix"></div>

		<% end %>


	</div>
</div>
</body>

</html>